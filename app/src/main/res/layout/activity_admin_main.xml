<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_Activity.AdminMainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/touristo_logo_medium_size" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu: "
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_doanhthu"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/baseline_attach_money_24"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:textSize="18dp"
                        android:focusable="false"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:text="1200000000 Đ"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/check_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_check_24"
                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Số hóa đơn: "
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hoadon"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/baseline_edit_calendar_24"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="18dp"
                        android:text="100"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/check_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/baseline_check_24"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <Button
        android:id="@+id/btn_KhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_bg"/>
    <Button
        android:id="@+id/btn_Xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phương tiện"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_bg" />

    <Button
        android:id="@+id/btn_TuyenXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/yellow"
        android:padding="15dp"
        android:text="tuyến bay" />

    <Button
        android:id="@+id/btn_NhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhân viên"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_bg" />

    <Button
        android:id="@+id/btn_CTHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Hoá Đơn"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_bg" />

    <Button
        android:id="@+id/btn_VouCher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voucher"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_bg" />
</LinearLayout>