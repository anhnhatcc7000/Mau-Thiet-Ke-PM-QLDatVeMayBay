<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_Activity.NhanVien.NhanVien_MainActivity">


    <EditText
        android:id="@+id/edt_empName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nhập tên nhân viên"
        android:inputType="textPersonName"
        tools:textSize="15dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edt_empCCCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập căn cước công dân"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tv_IdError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/design_default_color_error" />

    <EditText
        android:id="@+id/edt_empAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập địa chỉ nhân viên"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/edt_empPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập số điện thoại nhân viên"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_PhoneError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/design_default_color_error"/>

    <EditText
        android:id="@+id/edt_empMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập mail nhân viên"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_MailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/design_default_color_error"/>


    <RadioGroup
        android:id="@+id/rd_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rd_roleEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên"
            android:layout_marginRight="20dp"/>

        <RadioButton
            android:id="@+id/rd_roleAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_formError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/design_default_color_error"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="Add"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/yellow"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_ViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="View All"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>