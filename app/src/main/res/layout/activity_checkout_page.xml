<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".BookingPage.BookingDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="@drawable/touristo_logo_medium_size"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Thanh toán"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_radius_30dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán: "
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán qua Momo"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/momo_color"
            android:drawableEnd="@drawable/momo_logo"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/button_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán trực tiếp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/light_blue"
            android:paddingStart="12dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="16dp"
            android:onClick="onCashPaymentClicked"/>

        <TextView
            android:id="@+id/button_zalopay"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/zalopay_logo"
            android:gravity="center_vertical"
            android:onClick="onZaloPaymentClicked"
            android:paddingStart="12dp"
            android:paddingTop="12dp"

            android:paddingEnd="24dp"
            android:paddingBottom="12dp"

            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/baseline_attach_money_24"
            android:drawablePadding="10dp"/>
    </LinearLayout>
</LinearLayout>